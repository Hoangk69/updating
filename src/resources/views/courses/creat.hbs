            <label for="name">Tên khóa học</label>
            <input type="text" name="name" class="form-control" id="name"  placeholder="Nhập tên khóa học">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <input type="text" name="description" class="form-control" id="description"  placeholder="Nhập mô tả">
        </div>
        <div class="form-group">
            <label for="youtubeId">videoId</label>
            <input type="text" name="youtubeId" class="form-control" id="youtubeId"  placeholder="Nhập youtube id">
        </div>
